  <div class="banner-content">

    <div class="container text-center">
      <div class="row">

        <h1>Mes capteurs</h1>

        <div class="container">

          <div class="row">

            <div class="col-xs-12 col-sm-10 col-sm-offset-1">

                <% if @tests.present? %>
                  <h3 class="text-center">Mesures</h3>
                  <% @tests.each do |test| %>
                      <div class="product">
                        <div class='product-body'>
                          <h6>Capteur : <%= test.nom %></h6>
                          <h6>Mesure : <%= test.valeur %></h6>
                          <h6>Date : <%= test.created_at %></h6>
                          <p>-----------------------------------</p>
                        </div>
                      </div>
                  <% end %>
                <% end %>
            </div>
          </div>
      </div>
    </div>
  </div>
</div>

